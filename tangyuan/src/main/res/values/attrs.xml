<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBarView">
        <attr name="left_img_src" format="reference"/>
        <attr name="left_img_padding" format="dimension"/>
        <attr name="title" format="string"/>
        <attr name="title_text_size" format="dimension"/>
        <attr name="title_text_color" format="color"/>
        <attr name="title_gravity">
            <flag name="center" value="0"/>
            <flag name="start" value="1"/>
        </attr>
        <attr name="right_text" format="string"/>
        <attr name="right_text_size" format="dimension"/>
        <attr name="right_text_color" format="color"/>
        <attr name="right_img_src" format="reference"/>
        <attr name="right_img_padding" format="dimension"/>
        <attr name="title_bar_bg" format="color"/>
    </declare-styleable>

</resources>